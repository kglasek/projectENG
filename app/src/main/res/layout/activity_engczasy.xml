<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fadesec"
    tools:context=".engczasy">


    <TextView
        android:id="@+id/showtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="choose your tense"
        android:textColor="@color/whit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/presperf" />

    <Button
        android:id="@+id/presentsimp"
        android:layout_width="170dp"
        android:background="@drawable/transparent_button"
        android:textColor="@color/whit"
        android:layout_height="wrap_content"
        android:text="present simple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/prescont"
        android:layout_width="170dp"
        android:textColor="@color/whit"
        android:layout_height="wrap_content"
        android:text="present continous"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/transparent_button"
        app:layout_constraintTop_toBottomOf="@+id/presentsimp" />

    <Button
        android:id="@+id/presperf"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/whit"
        android:text="present perfect"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/transparent_button"
        app:layout_constraintTop_toBottomOf="@+id/prescont" />

    <Button
        android:id="@+id/pastsimp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button"
        android:layout_marginEnd="4dp"
        android:text="past simple"
        android:textColor="@color/whit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pastcont"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button"
        android:layout_marginEnd="4dp"
        android:text="past continous"
        android:textColor="@color/whit"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="48dp"
        app:layout_constraintTop_toBottomOf="@+id/pastsimp"/>

    <Button
        android:id="@+id/pastperf"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@color/whit"
        android:text="past perfect"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/transparent_button"
        tools:layout_editor_absoluteY="96dp"
        app:layout_constraintTop_toBottomOf="@+id/pastcont"/>
</android.support.constraint.ConstraintLayout>